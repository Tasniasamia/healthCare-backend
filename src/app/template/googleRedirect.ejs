<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Google Login</title>
  </head>
  <body>
    <h1>Redirecting to google ...</h1>
  </body>
  <script>
    (async () => {
      try {
        const response = await fetch(
          "<%=betterAuthURL%>/api/auth/sign-in/social",
          {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            credentials: "include",
            body: JSON.stringify({
              provider: "google",
              callbackURL: "<%=callbackURL%>",
            }),
          }
        );
        const data = await response.json();
        console.log("google rediect data", data);

        if (data?.url) {
          window.location.href = data?.url;
        } else {
          document.body.innerHTML = `<div><p>Error occured while redirecting to google. please try again later </p></div>`;
        }
      } catch (error) {
        console.log("google rediect error", error);
        document.body.innerHTML = `<div><p>Error occured while redirecting to google. please try again later </p></div>`;
      }
    })();
  </script>
</html>
